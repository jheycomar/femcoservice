@model IEnumerable<femcoservice.Models.Producto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
   <a class="btn btn-primary" href="/Productos/Create">Create New<span class="glyphicon-plus"></span></a>
     @*@Html.ActionLink("Create New", "Create",new { }, new { @class = "btn btn-primary" })*@
</p>
<table class="table table-striped table-bordered table-hover"  >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UltimaCompra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observacion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (!string.IsNullOrEmpty(item.Image))
            {
                <img src="@Url.Content(item.Image)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
            }

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UltimaCompra)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Observacion)
        </td>
        <td>
            <a class="btn btn-warning" href="/Productos/Edit/@item.producId">Edit<span class="glyphicon glyphicon-edit"></span></a>
            <a class="btn btn-info" href="/Productos/Details/@item.producId">Details<span class="glyphicon glyphicon-exclamation-sign"></span></a>
            <a class="btn btn-danger" href="/Productos/Delete/@item.producId">Delete<span class="glyphicon glyphicon-trash"></span></a>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.producId },new {@class="btn btn-warning" })
            @Html.ActionLink("Details", "Details", new { id=item.producId }, new { @class = "btn btn-info" })
            @Html.ActionLink("Delete", "Delete", new { id=item.producId }, new { @class = "btn btn-danger" })*@
        </td>
    </tr>
}

</table>
